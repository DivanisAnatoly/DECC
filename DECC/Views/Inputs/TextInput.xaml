<UserControl x:Class="DECC.Views.Inputs.TextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:DECC.Views.Inputs"
             mc:Ignorable="d" 
             >
    <TextBox Margin="10" Width="300" FontSize="14"
                         materialDesign:HintAssist.Hint="{Binding Label}" BorderThickness="2" materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Cursor="IBeam" Padding="8" Text="{Binding Value}"></TextBox>
</UserControl>
